---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import Showcase from '../../components/Showcase.astro';

const posts = await Astro.glob('../../articles/*.md');
---

<Layout title="Astro blog page">
  <Showcase heading="Astro Blog" text="A simple blog built with Astro" />
  <section class="page-content">
    <div class="container">
      {
        posts.map((post) => (
          <Card>
            <h3> {post.frontmatter.title} </h3>
            <div>
              Written by <strong>{post.frontmatter.author}</strong> on{' '}
              {new Date(post.frontmatter.date).toLocaleDateString()}
            </div>
            <p> {post.frontmatter.excerpt} </p>
            <a class="btn" href={`/blog/${post.frontmatter.slug}`}>
              Read more
            </a>
          </Card>
        ))
      }
    </div>
  </section>
</Layout>
